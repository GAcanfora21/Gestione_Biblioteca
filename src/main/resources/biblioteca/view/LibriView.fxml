<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="biblioteca.controller.LibriController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <right>
            <AnchorPane BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnAggiungiLibro" layoutX="2.0" layoutY="264.0" mnemonicParsing="false" onAction="#aggiungiLibro" text="Aggiungi" />
                  <Button fx:id="btnEliminaLibro" alignment="CENTER_RIGHT" layoutX="115.0" layoutY="264.0" mnemonicParsing="false" onAction="#eliminaLibro" text="Elimina" />
                  
                  <Label layoutX="1.0" layoutY="-7.0" text="Titolo"><font><Font name="Verdana Bold" size="14.0" /></font></Label>
                  <TextField fx:id="titoloField" layoutY="12.0" promptText="Titolo..." />
                  
                  <Label layoutX="2.0" layoutY="44.0" text="Autori"><font><Font name="Verdana Bold" size="14.0" /></font></Label>
                  <TextField fx:id="autoriField" layoutX="1.0" layoutY="64.0" promptText="Autori..." />
                  
                  <Label layoutX="2.0" layoutY="98.0" prefHeight="18.0" prefWidth="148.0" text="Anno di pubblicazione"><font><Font name="Verdana Bold" size="14.0" /></font></Label>
                  <TextField fx:id="annoField" layoutY="115.0" promptText="AAAA" />
                  
                  <Label layoutX="1.0" layoutY="149.0" prefHeight="18.0" prefWidth="150.0" text="Codice identificativo"><font><Font name="Verdana Bold" size="14.0" /></font></Label>
                  <TextField fx:id="codiceField" layoutX="1.0" layoutY="166.0" promptText="Codice di 10 cifre..." />
                  
                  <Label layoutX="1.0" layoutY="200.0" text="Copie"><font><Font name="Verdana Bold" size="14.0" /></font></Label>
                  <TextField fx:id="copieField" layoutY="218.0" promptText="Numero di copie..." />
               </children>
               <BorderPane.margin><Insets bottom="5.0" left="10.0" right="10.0" top="10.0" /></BorderPane.margin>
            </AnchorPane>
         </right>
         <top>
            <AnchorPane BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="cercaLibriField" prefHeight="26.0" prefWidth="146.0" promptText="Titolo/autori/codice..." />
                  <ImageView fitHeight="22.0" fitWidth="23.0" layoutX="153.0" layoutY="2.0">
                     <image>
                        <Image url="@images/magnifying-glass.png" />
                     </image>
                  </ImageView>
               </children>
               <BorderPane.margin><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></BorderPane.margin>
            </AnchorPane>
         </top>
         <center>
            <TableView fx:id="libriTable" editable="true" prefHeight="335.0" prefWidth="432.0" BorderPane.alignment="CENTER">
               <columns>
                  <TableColumn fx:id="titoloClm" onEditCommit="#updateTitolo" prefWidth="75.0" text="Titolo" />
                  <TableColumn fx:id="autoriClm" onEditCommit="#updateAutori" prefWidth="75.0" text="Autori" />
                  <TableColumn fx:id="annoDiPubblicazioneClm" onEditCommit="#updateAnno" prefWidth="94.4000244140625" text=" Anno pubblicazione" />
                  <TableColumn fx:id="codiceIdentificativoClm" onEditCommit="#updateCodice" prefWidth="89.5999755859375" text="Codice" />
                  <TableColumn fx:id="copieClm" onEditCommit="#updateCopie" prefWidth="52.800048828125" text="Copie" />
               </columns>   
               <BorderPane.margin><Insets bottom="7.0" left="10.0" right="10.0" top="10.0" /></BorderPane.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
